{
    "openapi": "3.0.0",
    "info": {
        "title": "MCC API",
        "version": "1.0.0",
        "description": "API documentation for MCC (Maintenance & Construction Coordinator)"
    },
    "paths": {
        "/api/auth/login": {
            "post": {
                "summary": "Login",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        }
    }
}